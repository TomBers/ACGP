Your Room: <%= @room %> Your Name: <%= @name %> Controller: <%= @controller %>
<br><br>
<%= if @controller == @name do %>
<p>You are the Controller</p>
<% else %>
    <button phx-click="take_control" phx-value-name="<%= @name %>">hit me</button>
<% end %>

<ol>
    <%= for user <- @users do %>
        <li><%= if user.name == @name do %>
            <b><%= user.name %></b>
            <% else %>
                <%= user.name %>
            <% end %>
        </li>
    <% end %>
</ol>